<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="textClearImageButtonStyle">
        <item name="android:layout_width">@dimen/layout_24</item>
        <item name="android:layout_height">@dimen/layout_24</item>
        <item name="android:layout_marginEnd">@dimen/layout_8</item>
        <item name="android:background">@null</item>
    </style>

    <style name="loginCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_8</item>
        <item name="android:paddingStart">@dimen/layout_4</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_14</item>

    </style>

</resources>
