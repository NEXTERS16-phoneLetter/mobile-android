<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <data>

        <variable
            name="viewModel"
            type="com.nexters.towhom.ui.home.HomeViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grapefruit">

<androidx.appcompat.widget.AppCompatImageButton
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginBottom="62dp"
    android:layout_marginLeft="@dimen/layout_24"
    app:layout_constraintBottom_toTopOf="@id/home_image"
    app:layout_constraintLeft_toLeftOf="parent"
    />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_image"
        android:layout_width="193dp"
        android:layout_height="202dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/layout_138"
        android:layout_marginLeft="@dimen/layout_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
        <TextView
            android:id="@+id/home_main_title"
            android:text="@string/str_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/home_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_pull"
        android:textSize="14dp"
        android:layout_marginTop="@dimen/layout_24"
        android:layout_marginLeft="96dp"
        app:layout_constraintTop_toBottomOf="@+id/home_main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/letter_start_image"
        android:layout_width="wrap_content"
        android:layout_height="576dp"
        android:elevation="10dp"
        android:src="@drawable/ic_letter"
        android:layout_marginBottom="24dp"
        android:background="@drawable/radius"
        android:layout_marginStart="47dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_main_title"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>